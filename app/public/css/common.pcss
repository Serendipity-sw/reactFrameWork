@mixin shaowe($color: #242424, $width: 4em) {
  display: block;
  background: $color;
  color: white;
  width: $width;
}

:global(#app) {
  height: 100%;

  button {
    @include shaowe(black,200em);
  }

  .allHeight {
    height: 100%;
  }

  $loveAnimal: dog, tiger, lien;

  @each $icon in $loveAnimal{
    .icon$(icon){
      /*background: url('icons/$(icon).png');*/
      background:#f00;
    }
  }

}